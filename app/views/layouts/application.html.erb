<!DOCTYPE html>
<html>
  <head>
    <title>LibraApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("Libra","/",:style=> "color:white;",class:"nav-list") %>
      </div>
      <div class="header-menus">
        <%= link_to("Libraとは","/about",:style=> "color:white;",class:"nav-list") %>
        <%= link_to("投稿一覧","/posts/index",:style=> "color:white;",class:"nav-list") %>
        <%= link_to("新規投稿","/posts/new",:style=> "color:white;",class:"nav-list") %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="copyright">
        <%= "©️2020 Libra" %>
      </div>
    </footer>
  </body>
</html>
